{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "rootDirs": ["ts", "types"],
    "outDir": "js",
    "sourceMap": false,
    "module": "ES6",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "ts/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "types"
  ]
}
